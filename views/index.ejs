<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Thiwtti</title>
    <script src="jquery/dist/jquery.js" ></script>
    <link rel="stylesheet" href="css/semantic/dist/semantic.css" media="screen" title="no title">
    <script type="text/javascript" src="css/semantic/dist/semantic.js"></script>
    <link rel="stylesheet" href="css/master.css" media="screen" title="no title">
    <link rel="stylesheet" type="text/css" href="js/slick-1.6.0/slick/slick.css"/>
    <script type="text/javascript">
      $(document).ready(function(){
        $('.menu .item').click(function(){
          $(this).siblings().each(function(){
            $(this).removeClass('active')
          })
          $(this).addClass('active')
          // var route = $(this).text()
          // switch
        })
        $('.ui.bordered.large.image').transition('fade right');
      })
    </script>
  </head>
  <body>
    <div class="wrapper">
      <div class="ui secondary menu container">
        <h1 class="ui header">TDD</h1>
        <div class="right menu">
          <a class="active item" href="/blog">
            Work
          </a>
          <a class="item">
            Blog
          </a>
          <a class="item">
            About Me
          </a>
        </div>
      </div>
      <div class="ui grid container">
        <div class="one wide column slide-button">
          <button class="slider-button"><i class='left double angle icon huge'></i></button>
        </div>
        <div class="fourteen wide column segment center aligned">
          <div class="slick-carousel">
            <div class="column segment center aligned">
