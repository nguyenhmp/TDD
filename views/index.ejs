              </div>
            </div>
          </div>
        </div>
        <div class="one wide column slide-button">
          <button class="slider-button"><i class='right double angle icon huge'></i></button>
        </div>
      </div>
    </div>
  </body>
  <script type="text/javascript" src="js/slick-1.6.0/slick/slick.js"></script>
  <script type="text/javascript">
    $(document).ready(function(){
      $('.slick-carousel').slick({
        slidesToShow:1,
        nextArrow: `<button type='button' class='ui right labeled icon button slick-next'>
                      <i class='angle left icon'></i>
                      Next
                    </button>`,
        prevArrow: `<button type='button' class='ui right labeled icon button slick-next'>
                      <i class='angle right icon'></i>
                      previous
                    </button>`
      });
      $('slider-button').click(function(e){
        $(this).css('border', "none")
        e.preventDefault()
      })
    })
